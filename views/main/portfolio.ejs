<!DOCTYPE html>
<html lang="en">
  <head>
  	<% include ../partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/page-specific/portfolio.css">

  	<% include ../partials/scripts.ejs %>
  </head>
  <body>
  	<% include ../partials/header.ejs %>

  	<main>

      <div class="container">
          <div id="title">
            <h1>Portfolio</h1>
          </div>
          <br>

          <ul>
            <% portfolios.forEach(function(portfolioInfo) { %>
              <div class="portfolio-item">
                <li><a href="/portfolio<%= portfolioInfo.localURL %>"><%= portfolioInfo.name %>:</a></li>
                <p><%= portfolioInfo.description %></p>
              </div>
            <% }); %>
          </ul>
      </div>

  	</main>

  	<% include ../partials/footer.ejs %>
  </body>
</html>